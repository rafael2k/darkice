AS_CASE([$with_vorbis],
    check, [PKG_CHECK_MODULES(VORBIS, [ogg vorbis vorbisenc], [], true)],
    yes,   [PKG_CHECK_MODULES(VORBIS, [ogg vorbis vorbisenc])],
